                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:text="@string/page2txt3_4"
                android:textAlignment="center"
                android:fontFamily="@font/rubik_regular"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_orange_btn"
            android:textAllCaps="false"
            android:text="@string/btnMasuk"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:onClick="kePage3"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white">
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@color/purewhite">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingTop="15dp"
                android:textSize="17sp"
                android:textColorHint="@color/browngrey"
                android:text="@string/page2txt4"
                android:textAlignment="center"
                android:fontFamily="@font/rubik_regular"
                />

            <Button
                android:id="@+id/btn_beli_kode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_blue_btn"
                android:fontFamily="sans-serif"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="@string/btnBeli"
                android:textAllCaps="false"
                android:textColor="@color/purewhite"
                android:textSize="16sp"
                android:textStyle="bold" />
    </LinearLayout>
